<theme>
   <formatVersion>7</formatVersion>
   <variables>
      <menuSelectedColor ifSubset="secondary_colorset:default">3CAEFB</menuSelectedColor>
      <menuSelectorColor>2d2828</menuSelectorColor>
      <menuSelectorColorEnd>000000</menuSelectorColorEnd>
      <menuFontcolor>cccccc</menuFontcolor>
      <menuSeparatorColor>555555</menuSeparatorColor>
      <menuGrouptitle>eeeeee</menuGrouptitle>
      <menuGroupSeparator>dddddd</menuGroupSeparator>
      <menuTitleColor>DFDCDC</menuTitleColor>
      <menubgColor>2d2828</menubgColor>
      <backgroundgrid>aaaaaa</backgroundgrid>
      <backgroundgridSelect ifSubset="secondary_colorset:default">666666</backgroundgridSelect>
      <menuFooter>555555</menuFooter>
      <gamelistSelectedColor>3CAEFB</gamelistSelectedColor>
      <gamelistSelectorColor ifSubset="secondary_colorset:default">666666</gamelistSelectorColor>
      <helpFontColor>DFDCDC</helpFontColor>
      <helpIconColor>DFDCDC</helpIconColor>
      <developerColor>00AC97</developerColor>
      <genreColor>3CAEFB</genreColor>
      <releaseColor>F3C300</releaseColor>
      <starFill>DF0024</starFill>
      <starUnfill>ffffff69</starUnfill>
      <manualOnColor>3CAEFB</manualOnColor>
      <savegameOnColor>3CAEFB</savegameOnColor>
      <cheevosOnColor>F3C300</cheevosOnColor>
      <splash.progressbarActive ifSubset="secondary_colorset:default">666666</splash.progressbarActive>
      <splash.progressbarActiveEnd>111111</splash.progressbarActiveEnd>
      <splash.progressbar>ffffff69</splash.progressbar>
      <splash.labelColor>ffffff</splash.labelColor>
      <sistema.lineainferior ifSubset="secondary_colorset:default">3CAEFB</sistema.lineainferior>
      <sistema.pie>000000</sistema.pie>
      <gamelist.starFill ifSubset="secondary_colorset:default">DF0024</gamelist.starFill>
      <classic.tile.background>000000</classic.tile.background>
      <grid.starFill ifSubset="secondary_colorset:default">F3C300</grid.starFill>
      <dimColor>808080</dimColor>
   </variables>


   <view name="system">
      <image name="background" extra="static">
         <path>./black/background.jpg</path>
      </image>

   </view>




   <view name="menu">
      <menuBackground name="menubg">
         <path>./black/fond_menu.jpg</path>
      </menuBackground>


      <menuTextEdit name="menutextedit">
         <inactive>./../../_theme_inc/images/caja-texto-negra.png</inactive>
         <active>./../../_theme_inc/images/caja-texto-negra-activa.png</active>
      </menuTextEdit>
   </view>

</theme>